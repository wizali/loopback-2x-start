{
    "name": "Teacher",
    "base": "User",
    "idInjection": true,
    "strict": true,
    "properties": {
        "name": {
            "type": "string",
            "required": true
        },
        "subject": {
            "type": "string"
        }
    },
    "relations": {
        "classes": {
            "type": "hasAndBelongsToMany",
            "model": "class"
        }
    },
    "acls": [
        {
            "accessType": "*",
            "permission": "ALLOW",
            "principalType": "ROLE",
            "principalId": "$unauthenticated",
            "property":"find"
        },
        {
            "accessType": "*",
            "permission": "ALLOW",
            "principalType": "ROLE",
            "principalId": "$unauthenticated",
            "property":"create"
        }
    ]
}